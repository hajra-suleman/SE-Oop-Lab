package even.or.odd;

/**
 *
 * @author Hajra
 */
public class EvenOrOdd {
    
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
       int num1 = 8;
       if( num1 % 2 == 0)
           System.out.println("The given number" + num1 + " is even.");
           else
           System.out.println("The given number" + num1 + " is odd.");
  
}
    }
