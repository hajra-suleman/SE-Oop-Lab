package maximum;

/**
 *
 * @author Hajra
 */
public class Maximum {
          int number1;
          int number2;
          int number3;
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Maximum m1 = new Maximum();
        m1.number1 = 3 ; m1.number2 = 6; m1.number3 = 8 ;
        
       if (m1.number3 > m1.number2  && m1.number3 > m1.number1 )
           System.out.println("Number3 is the Largest");
      
       else if (m1.number2 > m1.number1 && m1.number2 > m1.number3 )
           System.out.println("Number2 is the Largest");
       
       else
           System.out.println("Number1 is the Largest ");
      
    }
    
}
